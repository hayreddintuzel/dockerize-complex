{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions":[
        {
            "name": "client",
            "image": "hayreddintuzel/multi-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "hayreddintuzel/multi-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "hayreddintuzel/multi-worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "hayreddintuzel/multi-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings": [
                {
                        "hostPort": 80,
                        "containerPort": 80
                }
            ],
            "links":["client", "server"]
        }
    ]
}